---
import BaseLayout from '../layouts/BaseLayout.astro';
import BackgroundEffects from '../components/BackgroundEffects.astro';
import Hero from '../components/Hero.astro';
import ProgressBar from '../components/ProgressBar.astro';
import Footer from '../components/Footer.astro';
---

<BaseLayout title="I'm Wired Different - Coming Soon">
  <BackgroundEffects />

  <div class="min-h-screen flex flex-col items-center justify-center relative">
    <main class="flex-1 flex flex-col items-center justify-center w-full py-20">
      <Hero />
      <ProgressBar progress={66} />
    </main>

    <Footer />
  </div>
</BaseLayout>
